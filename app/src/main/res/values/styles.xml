    <style name="EtTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/fontColor</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="BtnTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btnFontColor</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/text_bg</item>
        <item name="android:paddingStart">26dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">26dp</item>
        <item name="android:paddingBottom">26dp</item>
        <!--<item name="android:padding">6dp</item>-->
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>


